{% extends 'base.html.twig' %}

{% block title %}Actualité
{% endblock %}

{% block body %}
	<h1 class="text-center">{{ blog.title }}</h1>

	<div class="card w-75 mx-auto text-center">
		<img class="card-img-top w-25 mx-auto" src="{{ vich_uploader_asset(blog,blog.imageFile) }}" alt="{{ blog.imageName }}">
		<div class="card-body">
			<h4 class="card-title">{{ blog.title }}</h4>
			<p class="card-text">
				{{ blog.content}}
			</p>

			{% for blogComment in blog.blogComment %}
				<div class="card w-50 mx-auto my-2 text-center d-flex flex-row justify-content-between">
					<p class="my-auto">{{ blogComment.description }}</p>
					<div class="d-flex flex-row justify-content-between">
						<a class="mx-2" href="{{ path('app_blog_comment_edit', {'id':blogComment.id}) }}"><img src="{{ asset('../assets/images/icones/pencil-square.svg') }}" alt="edition"></a>
						<a class="mx-2" href="{{ path('app_blog_comment_delete', {'id':blogComment.id}) }}"><img src="{{ asset('../assets/images/icones/trash.svg') }}" alt="edition"></a>
					</div>
				</div>
			{% endfor %}
			<div class="d-flex flex-row justify-content-end align-items-center">
				<a class="mx-2" href="{{ path('app_blog_edit', {'id':blog.id}) }}"><img src="{{ asset('../assets/images/icones/pencil-square.svg') }}" alt="edition"></a>
				{{ include('blog/_delete_form.html.twig') }}
			</div>
		</div>
	</div>


	<a href="{{ path('app_blog_index') }}">Retour aux actualités</a>


{% endblock %}
